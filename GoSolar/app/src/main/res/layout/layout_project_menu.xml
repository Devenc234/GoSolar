<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.devenc.gosolar.project_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Sample Project"
            android:textAlignment="textStart" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/image_1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
            <ImageView android:id="@+id/image_2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
            <ImageView android:id="@+id/image_3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Your Project"
            android:textAlignment="textStart" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/image_4"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
            <ImageView android:id="@+id/image_5"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
            <ImageView android:id="@+id/image_6"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gosolarblue"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_button_create_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <Button
            android:id="@+id/button_create_project"
            android:layout_width="251dp"
            android:layout_height="36dp"
            android:text="@string/menu_create_project"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>